<div class="form__wrapper inner">
  <h2 class="page-heading">ユーザー新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form__text">
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード（6文字以上）" %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード再入力" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <!-- 追加のカラムがある場合 -->
      <div class="field">
        <%= f.label :name, "ユーザー名" %><br />
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :profile, "プロフィール" %><br />
        <%= f.text_area :profile %>
      </div>

      <div class="field">
        <%= f.label :occupation, "所属" %><br />
        <%= f.text_area :occupation %>
      </div>

      <div class="field">
        <%= f.label :position, "役職" %><br />
        <%= f.text_area :position %>
      </div>

      <div class="actions">
        <%= f.submit "登録する", class: "form__btn" %>
      </div>
    </div>
  <% end %>
</div>

